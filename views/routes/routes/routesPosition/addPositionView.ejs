<%- include ('../../../partials/_header') %>
<nav class="navbar navbar-expand-lg navbar-light bg-light mt-3">
    <div class="container">
        <div class="">
            <a href="/components/Routes/route">Menu posiciones de rutas</a>
        </div>
    </div>
</nav>
<nav class="navbar navbar-expand-lg navbar-light bg-light mt-3">
    <div class="container">
        <form action="/components/Routes/route/viewAllPosition/addPosition" method="post">
            <div class="row">
                <div class="col">
                    <p>Escribe el nombre de un cliente o su id</p>
                    <div class="form-group">
                        <input type="text" name="search" class="form-control">
                    </div>
                    <%if(message!=undefined){%>
                        <div class="contianer mt-2 ml-2">
                            <p><%=message%></p>
                        </div>
                    <%}%>
                </div>
                <div class="col">
                    <button class="btn btn-primary">
                        Buscar
                    </button>
                </div>
            </div>
        </form>
    </div>
</nav>
<%if (data!=0){%>
    <div class="container mt-3">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>NOMBRE</th>
                    <th>DIRECCION</th>
                    <th>AGREGAR NUEVA POSICION</th>
                </tr>
            </thead>
            <tbody>
                <%for(var i=0; i < data.length; i++){%>
                <tr>
                    <td><%= data[i].idClient%></td>
                    <td><%= data[i].nameStore%></td>
                    <td>
                        <%= data[i].street%> 
                        <%= data[i].adressNumber%>, 
                        <%= data[i].colony%>
                    </td>
                    <td><a href="/components/Routes/route/viewAllPosition/addPosition/form/<%=data[i].idClient%>" class="btn btn-primary btn-sm">Agregar posicion</a></td>
                </tr>
                <%}%>
            </tbody>
        </table>
    </div>
<%}%>
<%- include ('../../../partials/_footer') %>
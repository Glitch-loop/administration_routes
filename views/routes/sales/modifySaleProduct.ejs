<%- include ('../../partials/_header') %>
<nav class="navbar navbar-expand-lg navbar-light bg-light mt-3">
    <div class="container">
        <div class="">
            <a href="/components/Routes/salesProduct">Menu ventas</a>
        </div>
    </div>
</nav>
<div class="col-md-7 mt-3">
    <div class="card">
        <div class="card-body">
            <h5>Buscar venta</h5>
            <%if(routes[0]!=undefined){%>
                <form action="/components/Routes/salesProduct/modifySaleProduct" method="post">
                    <h6>Ruta</h6>
                    <div class="form-group">
                        <select class="form-control" name="idRoute">
                            <%for(var i=0; i < routes.length; i++){%>
                                <option value="<%=routes[i].route.idRoute%>">
                                    <%=routes[i].route.nameRoute%>
                                </option>
                            <%}%>
                        </select>
                    </div>
                    <h6>Desde:</h6>
                    <input type="date" name="fisrtDateSale" class="form-control">
                    <div class="mt-3">
                        <h6>Hasta:</h6>
                        <input type="date" name="secondDateSale" class="form-control">
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">Buscar venta</button>
                    </div>
                </form>
            <%}%>
            <%if(message!=undefined){%>
                <div class="contianer mt-2 ml-2">
                    <p><%=message%></p>
                </div>
            <%}%>
        </div>
    </div>
</div>
<%if(dataDay!=undefined){%>
    <hr>
    <div class="card mt-3">
        <div class="card-body">
            <h5>Resultado de la busqueda: </h5>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>DIA</th>
                        <th>VER</th>
                        <th>ELIMINAR</th>
                    </tr>
                </thead>
                <%for(var i=0; i < dataDay.length; i++){%>
                        <tbody>
                            <tr>
                                <td><%=dataDay[i].date%></td>
                                <td>
                                    <form action="/components/Routes/salesProduct/modifySaleProduct/update" method="post">
                                        <input type="text" value="<%=dataDay[i].idRoute%>" name="idRoute" hidden>
                                        <input type="text" value="<%=dataDay[i].date%>" name="date" hidden>
                                        <div class="">
                                            <button type="submit" class="btn btn-primary">VER VENTA</button>
                                        </div>
                                    </form>
                                </td>
                                <td>
                                    <form action="/components/Routes/salesProduct/modifySaleProduct/delete" method="post">
                                        <input type="text" value="<%=dataDay[i].idRoute%>" name="idRoute" hidden>
                                        <input type="text" value="<%=dataDay[i].date%>" name="date" hidden>
                                        <div class="">
                                            <button type="submit" class="btn btn-danger">ELIMINAR</button>
                                        </div>
                                    </form>
                                </td>

                            </tr>   
                        </tbody>
                <%}%>
            </table>
        </div>
    </div>
<%}%>
<%- include ('../../partials/_footer') %>